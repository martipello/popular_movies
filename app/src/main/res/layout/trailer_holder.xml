<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="@dimen/trailer_holder"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/custom_elevation"
    app:cardBackgroundColor="@color/cardview_light_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="18sp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/custom_margin"
            android:layout_marginLeft="@dimen/custom_margin"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/play"
            android:layout_toStartOf="@+id/play" />

        <ImageButton
            android:id="@+id/play"
            android:layout_width="@dimen/trailer_holder"
            android:layout_height="@dimen/trailer_holder"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/custom_margin"
            android:layout_marginRight="@dimen/custom_margin"
            android:contentDescription="@string/ok"
            android:background="@drawable/ic_play_circle_outline_black_24dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>